TESTS = src/test/cases/*.js
REPORTER = spec
TIMEOUT = 20000
MOCHA_OPTS =

test:
  [@NODE_ENV](/user/NODE_ENV)=test ./node_modules/mocha/bin/mocha  \
    --reporter $(REPORTER) \
    --timeout $(TIMEOUT) \
    $(MOCHA_OPTS) \
    $(TESTS)

test-cov:
  [@URLLIB_COV](/user/URLLIB_COV)=1 $(MAKE) test MOCHA_OPTS='--require blanket' REPORTER=dot
  [@URLLIB_COV](/user/URLLIB_COV)=1 $(MAKE) test MOCHA_OPTS='--require blanket' REPORTER=html-cov > coverage.html

.PHONY: test test-cov
